<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="styles.css">
    <title>User Directory</title>
  </head>
  <body>
{{#users}}
  <div class="robot-container">
    <div class="user">
        <img class = "profile-img" src= "{{avatar}}" alt="user avatar picture">
    </div>
    <div class="user-content">
      <h1>{{name}}</h1>
      <div>{{address.city}}, {{address.country}}  |
        {{#job}}
        <span>{{job}}</span><span>{{company}}</span>
        {{/job}}
        {{^job}}
        <span style="color:red">Available for Hire.</span>
        {{/job}}
      </div>
      <div>{{email}} | {{phone}}</div>
   </div>
  </div>
  {{#university}}
  <div class="robot-container">
    <div class="user">
      Education
    </div>
    <div class="user-content">
     {{university}}
   </div>
  </div>
  {{/university}}
  {{^university}}
  {{/university}}
  <div class="robot-container">
    <div class="user">
      Skills
    </div>
    <div class="user-content">
      {{#skills}}
     <div>{{.}}</div>
      {{/skills}}
   </div>
  </div>
    {{/users}}
  </body>
</html>
